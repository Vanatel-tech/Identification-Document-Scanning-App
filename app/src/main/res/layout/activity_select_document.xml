<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDocumentActivityKt">

    <!-- Top Bar -->
    <com.android.example.cameraxapp.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Country Code Picker -->
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_margin="16dp"
        app:ccp_defaultNameCode="KE"
        app:ccp_showFullName="true"
        app:ccp_showPhoneCode="false" />

    <!-- PreviewView for CameraX -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/controls_layout"
        app:layout_constraintDimensionRatio="16:10" />

    <!-- Layout for controls -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_bar">

        <LinearLayout
            android:id="@+id/controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RadioGroup for Vehicle/Non-Vehicle Selection -->
            <RadioGroup
                android:id="@+id/vehicle_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_vehicle_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Vehicle"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_vehicle_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle" />
            </RadioGroup>

            <!-- Vehicle Category Section -->
            <LinearLayout
                android:id="@+id/vehicle_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Category:"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/vehicle_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Button to Capture Document -->
            <Button
                android:id="@+id/button_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Capture"
                android:textColor="@color/off_white"/>

            <!-- RadioGroup for Document Selection -->
            <RadioGroup
                android:id="@+id/document_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/radio_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Card" />

                <RadioButton
                    android:id="@+id/radio_passport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passport" />

                <RadioButton
                    android:id="@+id/radio_no_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Document" />
            </RadioGroup>

            <!-- Button to Continue -->
            <Button
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/off_white"
                android:layout_marginTop="16dp"
                android:text="Continue" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <com.android.example.cameraxapp.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>